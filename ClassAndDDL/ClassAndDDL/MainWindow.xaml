<Window x:Class="ClassAndDDL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassAndDDL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="376*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="69*"/>
            <ColumnDefinition Width="146*"/>
            <ColumnDefinition Width="149*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnFBD" Click="btnFBD_Click" Content="..."/>
        <Label Content="Librires" Grid.Column="1"/>
        <ListBox  x:Name="lbLib" Grid.Row="1" Grid.ColumnSpan="2" SelectionChanged="lbLib_SelectionChanged" />
        <Label Content="Class/Metod" Grid.Column="2"/>
        <ListBox  x:Name="lbClassMetog" Grid.Row="1" Grid.Column="2"/>
    </Grid>
</Window>
